<p>Find me in app/views/status/summary.html.erb</p>

 <button id="renderBtn">
 	Render
</button>

<% @plot_ids.each do |p| %>
<div class="container">
	<h3><%= p.description %></h3>
	<canvas id="<%= p.div_id %>"></canvas>
</div>
<% end %>

<script type="text/javascript">
    //var colorNames = Object.keys(window.chartColors);
    var data = <%= raw @plots.to_json  %>
    console.log(data)
    function renderChart(data, div_id, title) {
        var ctx = document.getElementById(div_id).getContext('2d');
        var labels = data["all_months"];
        var datasets =  data["datasets"]; 
        var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: datasets
        },
        options: {
            responsive: true,
            title: {
                display: true,
                text: title
            },
            tooltips: {
                mode: 'index',
                intersect: false,
            },
            hover: {
                mode: 'nearest',
                intersect: true
            },
            scales: {
                xAxes: [{
                    display: true,
                }],
                yAxes: [{
                    display: true,
                    type: 'logarithmic',
                }]
            }
        }
    });
}


$("#renderBtn").click(
	
    function () {
        <% @plot_ids.each do |p| %>
        var tmp_data = data["<%= p.div_id %>"] ;

        renderChart(tmp_data, "<%= p.div_id %>", "<%= p.description %>");
        <% end %>
    }
);


</script>